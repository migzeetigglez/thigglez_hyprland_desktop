// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)

    // Choose the order of the modules
    "modules-left": [
        "custom/appmenu",
        "wlr/taskbar",
        "custom/spotify",
        "hyprland/submap"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "hyprland/window",
        "custom/default-sink",
        "group/audio",
        "group/metrics",
        "group/capture",
        "custom/bluetooth",
        "custom/vpn",
        "custom/updates",
        "backlight",
        "keyboard-state",
        "battery",
        "battery#bat2",
        "clock#time",
        "clock#date",
        "tray",
        "custom/power"
    ],

    // Modules configuration

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "hyprland/window": {
        "expand": true,
        "justify": "left",
        "align": 0
    },

    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ⸨{songPosition}|{queueLength}⸩ {volume}% ",
        "format-disconnected": "Disconnected ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": " "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\"></span> ",
            "on": " "
        },
        "repeat-icons": {
            "on": " "
        },
        "single-icons": {
            "on": "1 "
        },
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },

    "tray": {
        // "icon-size": 21,
        "spacing": 10
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },

    "clock#time": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%I:%M %p}",
        "format-alt": "{:%Y-%m-%d}"
    },
    "clock#date": {
        "format": "{:%a, %b %d}"
    },

    "cpu": {
        "format": "{usage}% ",
        "tooltip": false
    },

    "memory": {
        "format": "{}% "
    },

    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""]
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },

    "battery#bat2": {
        "bat": "BAT2"
    },

    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "min-length": 18,
        "max-length": 24,
        "align": 0.5
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },

    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },

    "group/audio": {
        "orientation": "horizontal",
        "drawer": {
            "children-class": "audio-pill",
            "click-to-reveal": true,
            "transition-duration": 250,
            "transition-left-to-right": false
        },
        "modules": [
            "custom/audio",
            "pulseaudio",
            "pulseaudio/slider",
            "custom/volmute",
            "custom/mic"
        ]
    },

    "custom/audio": {
        "format": "",
        "tooltip": "Audio"
    },

    "group/metrics": {
        "orientation": "horizontal",
        "drawer": {
            "children-class": "metrics-pill",
            "click-to-reveal": true,
            "transition-duration": 250,
            "transition-left-to-right": false
        },
        "modules": [
            "custom/metrics",
            "custom/sysmon",
            "idle_inhibitor",
            "power-profiles-daemon",
            "cpu",
            "memory",
            "temperature",
            "custom/disk",
            "network",
            "custom/net"
        ]
    },

    "custom/metrics": {
        "format": "",
        "tooltip": "System"
    },
    "custom/sysmon": {
        "format": "",
        "tooltip": "System Monitor",
        "on-click": "plasma-systemmonitor"
    },

    "custom/spotify": {
        "return-type": "json",
        "interval": 1,
        "exec": "$HOME/.config/waybar/scripts/spotify_now.py",
        "max-length": 80,
        "hide-empty-text": true,
        "escape": true,
        "on-click": "playerctl --player=spotify,spotifyd play-pause",
        "on-click-right": "playerctl --player=spotify,spotifyd next",
        "on-click-middle": "playerctl --player=spotify,spotifyd previous"
    },

    "custom/updates": {
        "return-type": "json",
        "interval": 600,
        "exec": "$HOME/.config/waybar/scripts/updates.sh",
        "hide-empty-text": true
    },

    "custom/disk": {
        "return-type": "json",
        "interval": 60,
        "exec": "$HOME/.config/waybar/scripts/disk_home.sh"
    },

    "custom/vpn": {
        "return-type": "json",
        "interval": 10,
        "exec": "$HOME/.config/waybar/scripts/vpn.sh",
        "on-click": "$HOME/.config/waybar/scripts/mullvad_toggle.sh",
        "hide-empty-text": true
    },

    "custom/mic": {
        "return-type": "json",
        "interval": 2,
        "exec": "$HOME/.config/waybar/scripts/mic.sh",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"
    },

    "custom/net": {
        "return-type": "json",
        "interval": 1,
        "exec": "$HOME/.config/waybar/scripts/net_traffic.sh",
        "min-length": 18,
        "max-length": 24,
        "align": 0.5
    },

    "custom/bluetooth": {
        "return-type": "json",
        "interval": 5,
        "exec": "$HOME/.config/waybar/scripts/bluetooth.sh",
        "on-click": "blueman-manager"
    },
    "custom/screenrecord": {
        "return-type": "json",
        "interval": 1,
        "exec": "$HOME/.config/waybar/scripts/screen_record.sh",
        "on-click": "$HOME/.config/waybar/scripts/screen_record_toggle.sh"
    },
    "custom/screenshot": {
        "return-type": "json",
        "interval": 3600,
        "exec": "$HOME/.config/waybar/scripts/screenshot.sh",
        "on-click": "$HOME/.config/waybar/scripts/screenshot_take.sh"
    },
    "group/capture": {
        "orientation": "horizontal",
        "drawer": {
            "children-class": "capture-pill",
            "click-to-reveal": true,
            "transition-duration": 250,
            "transition-left-to-right": false
        },
        "modules": [
            "custom/capture",
            "custom/screenrecord",
            "custom/screenshot",
            "custom/recordings-dir",
            "custom/screenshots-dir"
        ]
    },
    "custom/capture": {
        "format": "",
        "tooltip": "Capture"
    },
    "custom/recordings-dir": {
        "format": " ",
        "tooltip": "Open recordings folder",
        "on-click": "thunar $HOME/Videos/recordings"
    },
    "custom/screenshots-dir": {
        "format": " ",
        "tooltip": "Open screenshots folder",
        "on-click": "thunar $HOME/Pictures/Screenshots"
    },

    "custom/default-sink": {
        "exec": "$HOME/.config/waybar/scripts/default_sink.sh",
        "interval": 2,
        "hide-empty-text": true,
        "tooltip": false
    },

    "custom/volmute": {
        "return-type": "json",
        "interval": 2,
        "exec": "$HOME/.config/waybar/scripts/volmute.sh",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },

    "custom/power": {
        "format" : "⏻",
        "tooltip": false,
        "min-length": 4,
        "align": 0.5,
        "on-click": "$HOME/.config/waybar/scripts/power_menu.sh"
    },
    "custom/appmenu": {
        "format": " ",
        "tooltip": "App Picker",
        "on-click": "$HOME/.config/waybar/scripts/wofi_toggle.sh",
        "on-click-right": "wofi --show run",
        "escape": true
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "tooltip-format": "{title}",
        "icon-size": 18,
        "all-outputs": false,
        "sort-by-app-id": true,
        "on-click": "activate",
        "on-click-right": "minimize",
        "on-click-middle": "close",
        "ignore-list": ["waybar"]
    }

}
